.header
  %a#reset.btn{ href: '#' } Reset
  %h1 Meter

%ul.metrics
  %li
    %strong Time
    #time 0:00
  %li
    %strong Distance
    #distance 0.00
%ul#logs
  
:plain
  <script type="text/html" id="logs_tmpl">
    <% for (var i=0, ii=logs.length; i<ii; i++) { %>
      <li>
        <time><%= logs[i].date %></time>
        <%= logs[i].story %>
      </li>
    <% } %>
    <% if (logs.length == 0) { %>
    <li class="no-logs">Get on your bike, fat bastard.</li>
    <% } %>
  </script>

.footer
  = link_to "Do it, do it now.", new_trip_path, class: 'bfb', onclick: "window.location='#{new_trip_path}'; return false;"